pipeline {
    agent any

    environment {
        SONAR_TOKEN = credentials('sonar_token') // ID du token SonarQube dans Jenkins
    }

    stages {
        stage('Checkout Jenkins Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/mayss111/jenkins.git'
            }
        }

        stage('Maven SonarQube Analysis') {
            steps {
                dir('StudentsManagement-DevOps') { // ← on se déplace dans le sous-dossier du projet Maven
                    script {
                        withSonarQubeEnv('SonarQube') {
                            sh """
                                mvn clean package -DskipTests sonar:sonar \
                                -Dsonar.projectKey=StudentsManagement-DevOps \
                                -Dsonar.login=${SONAR_TOKEN} \
                                -Dsonar.java.binaries=target/classes
                            """
                        }
                    }
                }
            }
        }
    }
}

