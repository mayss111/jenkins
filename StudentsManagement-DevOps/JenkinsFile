pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds')
        IMAGE_NAME = "mayss111/alpine"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/mayss111/jenkins.git'
            }
        }

        stage('Build Maven') {
            steps {
                dir('StudentsManagement-DevOps') {
                    sh 'mvn clean install -DskipTests'
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    sh """
                       docker build -t ${IMAGE_NAME}:latest StudentsManagement-DevOps
                    """
                }
            }
        }

        stage('Docker Login & Push') {
            steps {
                script {
                    sh """
                       echo ${DOCKERHUB_CREDENTIALS_PSW} | docker login -u ${DOCKERHUB_CREDENTIALS_USR} --password-stdin
                       docker push ${IMAGE_NAME}:latest
                    """
                }
            }
        }
    }
}


