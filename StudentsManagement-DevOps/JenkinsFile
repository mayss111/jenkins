pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Build Maven') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    docker.build("mayss111/studentsmanagement:latest")
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                        docker.image("mayss111/studentsmanagement:latest").push()
                    }
                }
            }
        }
    } // <-- ici ferme la section stages
} // <-- ici ferme le pipeline


