pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/mayss111/jenkins.git'
            }
        }

        stage('Build Maven') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Docker Build & Push') {
            steps {
                script {
                    docker.build('mayss111/alpine:latest').push()
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline termin√©e.'
        }
    }
}

