pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds') // ID des credentials Docker Hub dans Jenkins
        IMAGE_NAME = 'mayss111/students-management:latest'
        SONAR_TOKEN = credentials('sonar_token') // use straight single quotes
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
                 git branch: 'main', url: 'https://github.com/mayss111/jenkins.git'

            }
        }

        stage('Build Maven') {
            steps {
                dir('StudentsManagement-DevOps') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('StudentsManagement-DevOps') {
                    sh "docker build -t ${IMAGE_NAME} ."
                }
            }
        }

        stage('Load Image to Minikube') {
            steps {
                script {
                    // Vérifie si minikube est accessible
                    sh "minikube status || exit 1"
                    // Charge l'image dans Minikube
                    sh "minikube image load ${IMAGE_NAME}"
                }
            }
        }


        stage('Deploy to Kubernetes') {
            steps {
                dir('StudentsManagement-DevOps/k8s') {
                    // Applique ton deployment.yaml et service.yaml si tu en as un
                    sh 'kubectl apply -f deployment.yaml'
                    sh 'kubectl apply -f service.yaml || echo "Service.yaml non trouvé, skipping..."'
                }
            }
        }

        stage('Docker Login & Push') {
            steps {
                script {
                    sh """
                        echo ${DOCKERHUB_CREDENTIALS_PSW} | docker login -u ${DOCKERHUB_CREDENTIALS_USR} --password-stdin
                        docker push ${IMAGE_NAME}
                    """
                }
            }
        }
        stage('Maven SonarQube Analysis') {
                    steps {
                        script {
                            withSonarQubeEnv('SonarQube') {
                                sh """
                                    mvn sonar:sonar \
                                    -Dsonar.projectKey=StudentsManagement-DevOps \
                                    -Dsonar.login=${SONAR_TOKEN}
                                """
                            }
                        }
                    }
                }
    }

    post {
        success {
            echo 'Pipeline terminée avec succès !'
        }
        failure {
            echo 'La pipeline a échoué. Vérifie les logs !'
        }
    }
}
