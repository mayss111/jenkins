pipeline {
    agent any

    tools {
        maven 'MAVEN_3'   // Le nom que tu as configur√© dans Jenkins
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir('StudentsManagement-DevOps') {
                    sh 'mvn clean install'
                }
            }
        }

        stage('Test') {
            steps {
                dir('StudentsManagement-DevOps') {
                    sh 'mvn test'
                }
            }
        }

        stage('Archive Artifacts') {
            steps {
                dir('StudentsManagement-DevOps') {
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }
    }
}
