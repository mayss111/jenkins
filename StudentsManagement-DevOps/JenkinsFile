pipeline {
    agent any

    triggers {
        githubPush()       // déclenche à chaque push
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    try {
                        sh 'mvn clean package -DskipTests'
                    } catch (err) {
                        echo "Maven a échoué, mais on continue"
                        currentBuild.result = 'FAILURE'
                    }
                }
            }
        }

        stage('Docker') {
            steps {
                echo "Docker build & push..."
                sh 'docker build -t mayss111/studentsmanagement:latest . || echo "Docker build échoué"'
                sh 'docker push mayss111/studentsmanagement:latest || echo "Docker push échoué"'
            }
        }
    }

    post {
        always {
            echo "Pipeline terminée avec status: ${currentBuild.result}"
        }
    }
}
