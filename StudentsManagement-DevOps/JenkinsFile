pipeline {
    agent any
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/mayss111/jenkins'
            }
        }
        stage('Build Maven') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Docker Build & Push') {
            steps {
                script {
                    docker.build('mayss111/alpine:latest').push()
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline terminÃ©e.'
        }
    }
}

